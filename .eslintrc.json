{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-empty": "warn",
    "no-undef": "off",
    "no-useless-escape": "warn",
    "no-inner-declarations": "off"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**", "**/tests/**", "**/scripts/**"],
      "env": {
        "jest": true,
        "node": true,
        "browser": false
      },
      "rules": {
        "no-undef": "off",
        "no-empty": "warn"
      }
    }
  ]
}
