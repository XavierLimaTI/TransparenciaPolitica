{
  "name": "politica-transparente-brasil",
  "version": "1.0.0",
  "description": "Plataforma de transparência política brasileira",
  "main": "index.html",
  "scripts": {
    "dev": "python -m http.server 8000",
    "start": "python -m http.server 8000",
    "start:npm": "npx http-server -c-1 -p 8000",
    "dev:npm": "npx http-server -c-1 -p 8000",
    "serve": "npx http-server -c-1 -p 8000",
    "build": "node build.js && npm run build:css",
    "build:css": "npx tailwindcss -i src/styles/tailwind.css -o dist/styles.css --minify",
    "preview": "npx http-server ./dist -p 8000",
    "start:prod": "npx http-server ./dist -p 8000",
    "start-proxy": "node server/proxy.js",
    "start-proxy:local": "node server/proxy.js",
    "start-proxy:express": "node server/proxy-express.js",
    "verify-proxy": "node scripts/verify-proxy.js",
  "pretest": "node scripts/build-test-cjs.js",
  "test": "set \"NODE_OPTIONS=--experimental-vm-modules\" && node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --runInBand",
    "test:gov": "node scripts/test-government-api.js",
    "test:integration": "node scripts/run-integration.js",
    "download:portal-monthly": "node scripts/download_portal_monthly.js",
    "check-workflows": "python scripts/validate_workflows.py",
    "start:metrics": "node tools/metrics-exporter.js",
    "start:webhook-resync": "node server/webhook-resync.js",
    "test:integration:local": "node scripts/run-integration-local.js",
    "test:smoke": "node scripts/smoke-all.js",
    "test:playwright": "node scripts/playwright/run-portal-key.js",
    "test:e2e": "npx playwright test",
    "test:proxies": "node scripts/test-proxies.js",
    "ci": "npm test",
    "smoke": "node scripts/test-csv-parse.js && npx http-server -c-1 -p 8000 & echo 'Server started'",
    "smoke:e2e": "node scripts/smoke-e2e.js",
    "test:unit": "jest",
    "ingest": "node scripts/ingest-datasets.js"
  },
  "keywords": [
    "politica",
    "transparencia",
    "brasil",
    "dados-abertos"
  ],
  "author": "Política Transparente Brasil",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "autoprefixer": "^10.4.14",
    "cors": "^2.8.5",
    "esbuild": "^0.19.4",
    "express": "^4.21.2",
    "flat-cache": "^3.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.55.1",
    "postcss": "^8.4.21",
    "puppeteer": "^24.23.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "minimist": "^1.2.8"
  },
  "optionalDependencies": {
    "adm-zip": "^0.5.9",
    "better-sqlite3": "^12.4.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/scripts/playwright/",
      "<rootDir>/tests/portal-.*\\.spec\\.js$",
      "<rootDir>/tests/e2e/"
    ]
  }
}
